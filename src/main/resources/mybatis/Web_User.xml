<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.Mapper.web_user_mapper">
	<select id="AllUserList" resultType="com.example.demo.DTO.web_userDTO">
		select *
		from web_user
	</select>
	<select id="SearchUser" resultType="com.example.demo.DTO.web_userDTO">
		select user_id
		from web_user
		where user_id = #{_uuid}
	</select>
	<select id="UserLogin" resultType="com.example.demo.DTO.web_userDTO">
		select * 
		from web_user
		where user_id = #{_uuid} and user_pw = #{_uupw}
	</select>
	<update id="UserUpdate">
		update web_user
		set user_pw = #{user.user_pw},
		user_name = #{user.user_name},
		user_pnum = #{user.user_pnum},
		image_url = #{user.image_url} 
		where user_id = #{user.user_id}
	</update>
	<delete id="UserDelete">
		delete 
		from web_user
		where user_id = #{user.user_id}
	</delete>
	<insert id="UserCreate">
		insert into web_user 
		values(#{user.user_id}, #{user.user_pw}, #{user.user_name}, #{user.user_pnum}, #{user.image_url})
	</insert>
</mapper>